<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUI.Pages.MainPage">

    <Grid RowDefinitions="Auto, Auto, Auto, *, Auto, Auto, Auto"
          ColumnDefinitions="*, *"
          Padding="40">

        <Button Text="Excercise tracker" Margin="5" Grid.Row="1" Grid.Column="0"/>
        <Button Text="Finance tracker" Margin="5" Grid.Row="1" Grid.Column="1"/>

        <Button x:Name="SubApp" Margin="5" Text="SubApp" Grid.Row="2" Grid.Column="0"/>
        <Button x:Name="SubApps"   Margin="5" Text="SubApp" Grid.Row="2" Grid.Column="1"/>

        <HorizontalStackLayout HorizontalOptions="Center" VerticalOptions="End" Spacing="100" Grid.Row="4" Grid.ColumnSpan="3">
            <Button Text="Light" Grid.Column="0" />
            <Button Text="Dark" Grid.Column="1" />
        </HorizontalStackLayout>
    </Grid> 
</ContentPage>
